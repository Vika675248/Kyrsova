# Приклад .env файлу (НЕ коммітьте в репозиторій)
# MongoDB підключення
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/dbname

# JWT
JWT_SECRET=very_secret_key
JWT_EXPIRE=7d

# Порт (Render встановлює PORT автоматично)
PORT=5000

# Режим
NODE_ENV=production

# Завантаження файлів
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Якщо хочете, щоб клієнт звертався на інший URL для API
REACT_APP_API_URL=
